<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".activity_createnewpost">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:drawableLeft="@drawable/xmark"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center_horizontal|center_vertical"
        android:text="Create new post"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ECECEC" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="411dp"
        android:layout_height="49dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:drawablePadding="8dp"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="James"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/imagee" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_transparent"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:gravity="top"
        android:hint="Jame, what are you ..."
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textColorHint="#C2C3C4" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"

        android:layout_height="2dp"
        android:background="#ECECEC"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/camera"
        android:drawablePadding="10dp"
        android:fontFamily="@font/inter_light"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="Upload pictures/videos"
        android:textColor="#030B5B"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView10"

        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:drawableLeft="@drawable/feeling"
        android:drawablePadding="10dp"
        android:fontFamily="@font/inter_light"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="Feeling"
        android:textColor="#030B5B"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:drawableLeft="@drawable/checkin"
        android:drawablePadding="10dp"
        android:fontFamily="@font/inter_light"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="Check-in"
        android:textColor="#030B5B"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:drawableLeft="@drawable/tag"
        android:drawablePadding="10dp"
        android:fontFamily="@font/inter_light"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="Tag someone"
        android:textColor="#030B5B"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:drawableLeft="@drawable/gif"
        android:drawablePadding="10dp"
        android:fontFamily="@font/inter_light"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="File GIF"
        android:textColor="#030B5B"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:drawableLeft="@drawable/attach"
        android:drawablePadding="10dp"
        android:fontFamily="@font/inter_light"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="Attachment"
        android:textColor="#030B5B"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/border_button"

        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text="Post"
        android:textColor="#FFFFFF" />

</LinearLayout>