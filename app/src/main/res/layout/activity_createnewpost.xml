<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".activity.CreateNewPostActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <TextView
            android:id="@+id/close_create_post"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/xmark" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="47dp"

            android:gravity="center_horizontal|center_vertical"
            android:text="Create new post"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/close_create_post" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ECECEC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_height="wrap_content">
        <com.example.petconnect.CustomAvatar
            android:layout_width="52dp"
            android:layout_height="52dp"/>

    <TextView
        android:id="@+id/create_post_username"
        android:layout_width="411dp"
        android:layout_height="49dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="James"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        />
    </LinearLayout>

    <EditText
        android:id="@+id/txtstatus_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_transparent"
        android:ems="10"
        android:gravity="top"
        android:layout_weight="1"
        android:hint="Share your status . . ."
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textColorHint="#C2C3C4" />

    <ImageView
        android:id="@+id/uploadPicture1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_transparent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"

        android:layout_height="2dp"
        android:background="#ECECEC"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/uploadImage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/camera"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="Upload pictures/videos"
        android:textColor="#030B5B"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView10"

        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:drawableLeft="@drawable/feeling"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="Feeling"
        android:textColor="#030B5B"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:drawableLeft="@drawable/checkin"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="Check-in"
        android:textColor="#030B5B"
        android:textSize="20sp" />

