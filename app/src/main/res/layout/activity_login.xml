<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="40dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="164dp"
            android:layout_height="69dp"
            android:contentDescription="logo"
            android:src="@drawable/logo"
            tools:srcCompat="@drawable/logo" />

        <com.example.petconnect.CustomTextfield
            android:id="@+id/email_input_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            app:hint="abc@gmail.com"
            app:labelText="Email"
            app:startIcon="@drawable/envelope" />

        <com.example.petconnect.CustomTextfield
            android:id="@+id/password_input_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:hint="Your password"
            app:labelText="Password"
            app:startIcon="@drawable/lock_closed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Remember me"
                android:theme="@style/RadioButtonStyle" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:padding="0dp"
                android:text="Forgot password"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/primaryMain" />
        </LinearLayout>

        <Button
            android:id="@+id/submit_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/primaryMain"
            android:padding="16dp"
            android:text="Sign in"
            app:cornerRadius="8dp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="24dp"
            android:background="@color/primaryLight" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_bg_with_shadow">

            <Button
                android:id="@+id/button3"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:drawableLeft="@drawable/facebook"
                android:text="Continue with Facebook"

                android:textColor="@android:color/black"
                app:cornerRadius="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_bg_with_shadow">

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/smoke"
                android:drawableLeft="@drawable/google"
                android:text="Continue with Google"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@android:color/black"
                app:cornerRadius="8dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Do not have an account?"
            android:textAlignment="center"

            android:textColor="@color/third"
            android:textSize="14sp" />

        <Button
            android:id="@+id/toSignup"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:padding="0dp"
            android:text="Sign Up"
            android:textColor="@color/primaryMain" />

    </LinearLayout>
</ScrollView>
