<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="40dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="164dp"
            android:layout_height="69dp"
            android:contentDescription="logo"
            android:src="@drawable/logo"
            tools:srcCompat="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <com.example.petconnect.CustomTextfield
                android:id="@+id/name_input_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hint="Your Name"
                app:labelText="Name *" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:orientation="vertical">

                <com.example.petconnect.CustomDropdown
                    android:id="@+id/gender_input_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:labelDropdown="Gender" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.example.petconnect.CustomTextfield
                    android:id="@+id/dob_input_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIcon="@drawable/calendar"
                    app:hint="DD/MM/YYYY"
                    app:labelText="Date of Birth" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <com.example.petconnect.CustomTextfield
                android:id="@+id/email_input_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hint="abc@gmail.com"
                app:labelText="Email *"
                app:startIcon="@drawable/envelope" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <com.example.petconnect.CustomTextfield
                android:id="@+id/address_input_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hint="Address"
                app:labelText="Address"
                app:startIcon="@drawable/adress" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <com.example.petconnect.CustomTextfield
                android:id="@+id/pw_input_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIcon="@drawable/eye"
                app:hint="Password"
                app:labelText="Password *"
                app:startIcon="@drawable/lock_closed" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tick1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:background="@drawable/tick"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp" />

                <TextView
                    android:id="@+id/labelsub1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="Must contain at least 1 number and 1 alphabetical character"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tick2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:background="@drawable/tick"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp" />

                <TextView
                    android:id="@+id/labelsub2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="Must be at least 6 characters"
                    android:textSize="13sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <com.example.petconnect.CustomTextfield
                android:id="@+id/confirm_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIcon="@drawable/eye"
                app:hint="Re-enter your password"
                app:labelText="Confirm Password *"
                app:startIcon="@drawable/lock_closed" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tick3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:background="@drawable/tick"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp" />

                <TextView
                    android:id="@+id/labelsub3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="Match with password"
                    android:textSize="13sp" />
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btn_signup"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/primaryMain"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="28dp"
            android:gravity="center"
            android:text="OR"
            android:textSize="16sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_bg_with_shadow">

            <Button
                android:id="@+id/btn_fb"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:drawableLeft="@drawable/facebook"
                android:text="Continue with Facebook"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                app:cornerRadius="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_bg_with_shadow">

            <Button
                android:id="@+id/btn_gg"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/smoke"
                android:drawableLeft="@drawable/google"
                android:text="Continue with Google"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                app:cornerRadius="8dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Already have an account ?"
            android:textAlignment="center"
            android:textColor="@color/third"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_signin"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textColor="@color/primaryMain" />

    </LinearLayout>

</ScrollView>
