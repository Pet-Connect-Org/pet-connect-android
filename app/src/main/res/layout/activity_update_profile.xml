<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="12dp"
    android:paddingBottom="40dp"
    tools:context=".activity.UpdateProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:text="Update your profile."
            android:textColor="@color/darkNeutral"
            android:textSize="30dp"
            android:textStyle="bold" />

        <com.example.petconnect.CustomTextfield
            android:id="@+id/name_input_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:hint="Your Name"
            app:labelText="Name *" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <com.example.petconnect.CustomDropdown
                android:id="@+id/gender_input_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                app:labelDropdown="Gender" />

            <com.example.petconnect.CustomTextfield
                android:id="@+id/dob_input_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                app:endIcon="@drawable/calendar"
                app:hint="DD/MM/YYYY"
                app:labelText="Date of Birth" />
        </LinearLayout>

        <com.example.petconnect.CustomTextfield
            android:id="@+id/email_input_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:enable="false"
            app:hint="abc@gmail.com"
            app:labelText="Email *"
            app:startIcon="@drawable/envelope" />

        <com.example.petconnect.CustomTextfield
            android:id="@+id/address_input_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:hint="Address"
            app:labelText="Address"
            app:startIcon="@drawable/adress" />

        <Button
            android:id="@+id/button_update_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/primaryMain"
            android:text="Update"
            android:textColor="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="20dp"
            android:background="@color/neutral" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Change your password."
            android:textColor="@color/darkNeutral"
            android:textSize="30dp"
            android:textStyle="bold" />

        <com.example.petconnect.CustomTextfield
            android:id="@+id/pw_input_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:endIcon="@drawable/eye"
            app:hint="Password"
            app:labelText="Current password *"
            app:startIcon="@drawable/lock_closed" />

        <com.example.petconnect.CustomTextfield
            android:id="@+id/pw_new_input_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:endIcon="@drawable/eye"
            app:hint="Password"
            app:labelText="New password *"
            app:startIcon="@drawable/lock_closed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tick1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:background="@drawable/tick"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

            <TextView
                android:id="@+id/labelsub1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="Must contain at least 1 number and 1 alphabetical character"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tick2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:background="@drawable/tick"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

            <TextView
                android:id="@+id/labelsub2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="Must be at least 6 characters"
                android:textSize="13sp" />
        </LinearLayout>

        <com.example.petconnect.CustomTextfield
            android:id="@+id/pw_re_new_input_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:endIcon="@drawable/eye"
            app:hint="Password"
            app:labelText="Re-type your new password *"
            app:startIcon="@drawable/lock_closed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tick3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:background="@drawable/tick"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

            <TextView
                android:id="@+id/labelsub3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="Match with password"
                android:textSize="13sp" />
        </LinearLayout>


        <Button
            android:id="@+id/button_update_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/primaryMain"
            android:text="Change password"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>