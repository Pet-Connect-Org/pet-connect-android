<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/custom_comment"
    android:paddingBottom="12dp">

    <com.example.petconnect.CustomAvatar
        android:id="@+id/comment_author_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/comment_box_hover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:background="@drawable/custom_rounded_neutral_bg"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp">

            <TextView
                android:id="@+id/comment_author_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Bui Ngoc"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/comment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bui Ngoc"
                android:textSize="14dp"

                android:background ="@drawable/custom_rounded_neutral_bg"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:text="30 minute"
                android:textColor="@color/darkNeutral"
                android:textSize="12sp" />

            <Button
                android:id="@+id/comment_like_button"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:text="Like"
                android:textAlignment="viewStart"
                android:textColor="@color/darkNeutral"
                android:textSize="10sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/comment_edit_button"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:text="Edit"
                android:textAlignment="viewStart"
                android:textColor="@color/darkNeutral"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <Button
                android:id="@+id/comment_delete_button"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:text="Delete"
                android:textAlignment="viewStart"
                android:textColor="@color/darkNeutral"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>