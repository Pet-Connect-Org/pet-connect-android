<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_container"
    tools:context=".fragment.EditPostFragment">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".activity.CreateNewPostActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="42dp">

    <TextView
        android:id="@+id/close_edit_post"
        android:layout_width="42dp"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/xmark" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="47dp"

        android:gravity="center_horizontal|center_vertical"
        android:text="Edit a post"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/close_edit_post" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ECECEC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_height="wrap_content">
        <com.example.petconnect.CustomAvatar
            android:layout_width="52dp"
            android:layout_height="52dp"/>

        <TextView
            android:id="@+id/create_post_username"
            android:layout_width="411dp"
            android:layout_height="49dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="James"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/txtstatus_editpost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_transparent"
        android:ems="10"
        android:gravity="top"
        android:layout_weight="1"

        android:inputType="text"
        android:paddingLeft="20dp"
        android:textColorHint="#C2C3C4" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"

        android:layout_height="2dp"
        android:background="#ECECEC"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btnSavePost"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/border_button"
        android:gravity="center"
        android:text="Save"
        android:textColor="#FFFFFF" />

</LinearLayout>


</FrameLayout>